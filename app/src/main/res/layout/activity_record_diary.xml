<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordDiary"
    android:orientation="vertical"
    android:padding="@dimen/smallMargin"
    >

    <ImageView
        android:id="@+id/img_record_diary_ask"
        android:layout_width="@dimen/bigSize"
        android:layout_height="@dimen/bigSize"
        android:background="@drawable/question"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible"
        />

    <LinearLayout
        android:id="@+id/layout_record_diary_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/img_record_diary_mic"
            android:layout_width="@dimen/bigSize"
            android:layout_height="@dimen/bigSize"
            android:background="@drawable/mic"
            android:layout_marginBottom="@dimen/smallMargin"
            />
        <ImageView
            android:id="@+id/img_record_diary_on"
            android:layout_width="@dimen/smallSize"
            android:layout_height="@dimen/smallSize"
            android:background="@drawable/setting"
            android:layout_marginBottom="@dimen/mediumMargin"/>
        <Button
            android:id="@+id/btn_record_diary_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:text="기록 종료"
            android:textSize="@dimen/mediumText"
            android:textColor="#fff"
            android:padding="@dimen/mediumPadding"
            />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>